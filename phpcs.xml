<?xml version="1.0"?>
<ruleset name="Mini WP GDPR">
	<description>WordPress Coding Standards for Mini WP GDPR Plugin</description>

	<!-- What to scan -->
	<file>.</file>

	<!-- Exclude patterns -->
	<exclude-pattern>*/dev-notes/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/languages/*</exclude-pattern>
	<exclude-pattern>*/tests/*</exclude-pattern>
	<exclude-pattern>*.js</exclude-pattern>
	<exclude-pattern>*.css</exclude-pattern>

	<!-- Show progress and sniff codes in all reports -->
	<arg value="ps"/>

	<!-- Use colors in output -->
	<arg name="colors"/>

	<!-- Check up to 8 files simultaneously -->
	<arg name="parallel" value="8"/>

	<!-- Include the WordPress-Extra standard (recommended) -->
	<rule ref="WordPress-Extra">
		<!-- Allow array short syntax -->
		<exclude name="Universal.Arrays.DisallowShortArraySyntax"/>

		<!-- Disable yoda conditions (they're confusing) -->
		<exclude name="WordPress.PHP.YodaConditions"/>
	</rule>

	<!-- Check for PHP cross-version compatibility -->
	<!-- Note: PHPCompatibilityWP requires installation via Composer -->
	<!-- TODO: Install via composer (dev dependency) phpcompatibility/phpcompatibility-wp -->
	<!-- <config name="testVersion" value="7.4-"/> -->
	<!-- <rule ref="PHPCompatibilityWP"/> -->

	<!-- Verify WordPress version compatibility -->
	<config name="minimum_wp_version" value="5.0"/>

	<!-- Additional security rules -->
	<rule ref="WordPress.Security"/>

	<!-- Text domain verification -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="mini-wp-gdpr"/>
			</property>
		</properties>
	</rule>

	<!-- Prefix verification for global namespace -->
	<!-- pp_mwg / PP_MWG: legacy pp-core prefix (constants, globals) -->
	<!-- mwg: public API functions in functions.php (mwg_has_user_accepted_privacy_policy, etc.) -->
	<!-- Mini_Wp_Gdpr: namespaced classes and functions in includes/ -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="pp_mwg"/>
				<element value="PP_MWG"/>
				<element value="mwg"/>
				<element value="Mini_Wp_Gdpr"/>
			</property>
		</properties>
	</rule>
</ruleset>
